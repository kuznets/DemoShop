nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      a.navbar-brand(href='/') DemoShop
    form.navbar-form.navbar-left(role='search')
      .form-group
        input.form-control(type='text', placeholder='Search')
      button.btn.btn-default(type='submit') Submit
    unless user
      a.login-btn(href='/login')
        button.btn.btn-default.navbar-btn.navbar-right(type='button') Sign in
      a.login-btn(href='/register')
        button.btn.btn-default.navbar-btn.navbar-right(type='button') Create account
    else
      a.login-btn(href='/logout')
        button.btn.btn-default.navbar-btn.navbar-right(type='button') Logout
      a.login-btn(href='/profile')
        .navbar-right= user.email
